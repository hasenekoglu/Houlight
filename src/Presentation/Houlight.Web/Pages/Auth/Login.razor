@page "/login"
@using Houlight.Domain.Entities

<PageTitle>Giriş Yap - Houlight</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4" style="color: var(--primary-color);">Giriş Yap</h2>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" class="form-control" id="email" @bind="email" placeholder="ornek@email.com" />
                    </div>
                    
                    <div class="mb-4">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="password" @bind="password" />
                    </div>
                    
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" @onclick="HandleLogin">Giriş Yap</button>
                    </div>
                    
                    <div class="text-center mt-4">
                        <p class="mb-0">Hesabınız yok mu? <a href="/register" class="text-decoration-none" style="color: var(--primary-color);">Kayıt Ol</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";

    private async Task HandleLogin()
    {
        // TODO: Backend entegrasyonu yapılacak
        // Şimdilik temsili olarak yönlendirme yapıyoruz
        NavigationManager.NavigateTo("/customer/dashboard");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
} 