@using Houlight.Domain.Entities

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Offer.FromLocation → @Offer.ToLocation</h5>
        <p class="card-text">@Offer.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-primary">@Offer.LoadType</span>
            <div>
                <span class="me-2">@Offer.CompanyOfferedPrice ₺</span>
                <a href="/offers/@Offer.Id" class="btn btn-outline-primary">Detaylar</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public LoadOfferEntity Offer { get; set; }
} 